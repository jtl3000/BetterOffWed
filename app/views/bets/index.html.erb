<h1>Listing bets</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bets.each do |bet| %>
  <tr>
    <%= bet.displayname %>
    <%= bet.EngagementDate.strftime("%b, %Y") %>
    <%= bet.OrigWeddingDate.strftime("%b, %Y") %>
    <%= bet.Postponement %>
    <%= bet.NewWeddingDate.strftime("%b, %Y") %>
    <%= bet.WillDivorce %>
    <%= bet.DivorceDate.strftime("%b, %Y") %>
    <%= bet.OneDead %>
    <%= bet.WhoKillsWho %>
    <td><%= link_to 'Show', bet %></td>
    <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
    <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

